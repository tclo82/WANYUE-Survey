
.nav-article{
    width: 94%;
    margin: 0 auto;
}
.nav{
	width: 100%;
	height: 54px;
}
.article-nav{
	white-space: nowrap;
	overflow: hidden;
	height: 54px;
}
.article-nav-li{
    padding: 14rpx 20rpx 14rpx 20rpx;
    border-radius: 6rpx;
    background: #F5F5F5;
    color: #787878;
    margin-left: 3%;
    font-size: 28rpx;
    letter-spacing: 1rpx;
	display: inline-block;
	margin-top: 30rpx;
	white-space: normal;
}
.article-nav-li-select{
	background: linear-gradient(to bottom, #FF9000, #F64330);
	color: #fff;
}

